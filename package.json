{
  "name": "electon_business_project",
  "version": "1.0.0",
  "description": "Electron desktop app for business analysis project in Arabic",
  "license": "ISC",
  "author": "mohamed saleh",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "electronmon . --restart a.js,*.html,*.css,*.js",
    "pack": "electron-builder --dir",
    "build:css": "npx @tailwindcss/cli -i ./src/css/input.css -o ./src/css/tailwind.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/css/input.css -o ./src/css/tailwind.css --watch",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.businessanalysis",
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*"
    ]
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.3"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwindcss": "^4.1.5"
  }
}
